        <activity
            android:name=".ShipmentOrderDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ShipmentOrderListActivity"
            android:exported="false" />
        <activity
            android:name=".ShipmentCustomerListActivity"
            android:exported="false" />
        <activity
            android:name=".PrintActivity"
