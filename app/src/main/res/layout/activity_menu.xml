<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/replik"
    tools:context="com.replik.peksansevkiyat.MenuActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:backgroundTint="@color/replik"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/replik_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/test_user"
                    android:textColor="@color/white_light" />

                <TextView
                    android:id="@+id/txtMenuName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/menu"
                    android:textColor="@color/white_light" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/imgSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/four"
                android:layout_weight="0"
                android:backgroundTint="@color/replik"
                android:contentDescription="@string/empty"
                app:srcCompat="@drawable/ic_icon_settings"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fragment_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/forty"
                android:layout_marginTop="@dimen/thirty"
                android:layout_marginRight="@dimen/forty"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnPaletteAdd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventy"
                    android:text="@string/menu_palette"
                    app:cornerRadius="@dimen/fifteen"
                    app:strokeColor="@color/button_border"
                    app:strokeWidth="@dimen/one" />

                <Button
                    android:id="@+id/btnPaletteEdit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventy"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/menu_order"
                    app:cornerRadius="@dimen/fifteen"
                    app:strokeColor="@color/button_border"
                    app:strokeWidth="@dimen/one" />

                <Button
                    android:id="@+id/btnShipment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventy"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/menu_shipment"
                    app:cornerRadius="@dimen/fifteen"
                    app:strokeColor="@color/button_border"
                    app:strokeWidth="@dimen/one" />

                <Button
                    android:id="@+id/btnEnumeration"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventy"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/menu_enumeration"
                    app:cornerRadius="@dimen/fifteen"
                    app:strokeColor="@color/button_border"
                    app:strokeWidth="@dimen/one" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>